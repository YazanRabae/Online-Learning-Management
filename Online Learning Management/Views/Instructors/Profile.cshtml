@using LMS.Service.DTOs.UserDTOs
@model RegisterDto
@* instructor *@
<!DOCTYPE html>
<html>
<head>
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .narrow-card {
            max-width: 700px; /* Adjust the width as needed */
            margin: 0 auto; /* Center the card horizontally */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card narrow-card">
            <div class="card-header text-center">
                <h2>Profile</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="Name">Username:</label>
                    <input type="text" id="Name" class="form-control" value="@Model?.Name" disabled />
                </div>

                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="text" id="Email" class="form-control" value="@Model?.Email" disabled />
                </div>

                <div class="text-center">
                    <a asp-controller="Instructors" asp-action="Dashboard" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
