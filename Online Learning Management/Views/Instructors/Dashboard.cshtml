@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<section class="section dashboard">
    <div class="container">
        @if (signInManager.IsSignedIn(User))
        {
            <div class="row justify-content-center">
                <!-- My Course Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card shadow-lg" style="height: 150px; width: 100%;">
                        <div class="card-body d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center bg-primary text-white me-3" style="height: 50px; width: 50px;">
                                <i class="bi bi-journal"></i>
                            </div>
                            <div>
                                <a asp-controller="Instructors" asp-action="GetAllCourses" class="card-title card-link text-primary h5">
                                    My Course
                                </a>
                                <p class="text-muted mb-0">Number of courses</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Enrollment Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card shadow-lg" style="height: 150px; width: 100%;">
                        <div class="card-body d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center bg-primary text-white me-3" style="height: 50px; width: 50px;">
                                <i class="bi bi-journal"></i>
                            </div>
                            <div>
                                <a asp-controller="Instructors" asp-action="GetAllCourses" class="card-title card-link text-primary h5">
                                    My Enrollment
                                </a>
                                <p class="text-muted mb-0">Enrollment In</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h1 class="text-center">Welcome Instructor</h1>

            <div class="row justify-content-center">
                <div class="container card p-4">
                    <h2>Welcome to your Instructor home page, the hub of your teaching journey! Here, you'll find all the tools and insights you need to manage your courses, track student progress, and engage with your learners effectively. From uploading new materials to analyzing performance data, your dashboard is designed to make your online teaching experience smooth and rewarding. Start exploring and take your courses to the next level!</h2>
                </div>
            </div>

            <div class="text-center">
                <a asp-controller="Instructors" asp-action="LogIn" class="btn btn-primary">Go To Login</a>
            </div>
        }
    </div>
</section>

