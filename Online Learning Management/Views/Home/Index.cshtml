
@{
    ViewData["Title"] = "Home Page";
    ViewBag.showSidebar = false;
}
<style>
    .carousel-inner img {
        object-fit: cover;
    }

    .info-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .info-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.25);
    }

    .card-icon {
        width: 80px;
        height: 80px;
        font-size: 2.5rem; /* Larger icons for better visibility */
        background-color: #f8f9fa; /* Light background for icons */
        color: #007bff; /* Custom color for icons */
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-custom-primary {
        background: linear-gradient(135deg, #007bff, #00d2ff); /* Gradient background */
        color: #ffffff;
    }

    .bg-custom-secondary {
        background: linear-gradient(135deg, #6c757d, #adb5bd); /* Gradient background */
        color: #ffffff;
    }

    .container {
        padding-top: 2rem;
    }

    .card-body h3 {
        font-size: 1.75rem; /* Larger title font */
        font-weight: bold;
    }

    .dropdown-menu {
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
        font-size: 1rem;
        padding: 8px 12px;
        transition: background-color 0.2s;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
   
        .card-body h3 {
            font-size: 1.5rem;
        }
    }
</style>

