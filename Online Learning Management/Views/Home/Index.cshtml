@{
    ViewData["Title"] = "Home Page";
    ViewBag.showSidebar = false;
}
<style>

.carousel-inner img {
    object-fit: cover;
}

.info-card {
    transition: transform 0.2s;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.info-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.card-icon {
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
}

.bg-custom-primary {
    background-color: #007bff;
}

.bg-custom-secondary {
    background-color: #6c757d;
}

.container {
    padding-top: 2rem;
}

.card-body h6 {
    font-size: 1.25rem;
    font-weight: bold;
}

.dropdown-menu {
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.dropdown-item {
    font-size: 1rem;
    padding: 8px 12px;
    transition: background-color 0.2s;
}

.dropdown-item:hover {
    background-color: #f8f9fa;
}
</style>


<div class="container" style="margin-top: 60px;">
    <div class="card mb-4">
        <div class="card-body p-4 ">
            <center>
               <bold><p>Learning Management System</p></bold>
            </center>
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="~/photo/file (1).png" class="d-block w-100 img-fluid" style="max-height: 500px; object-fit:fill" alt="...">
                        <div class="carousel-caption d-none d-md-block">
            @*                 <h5>First slide label</h5>
                            <p>Some representative placeholder content for the first slide.</p> *@
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/photo/—pngtree—e-learning men with blue tie_6606046.png" class="d-block w-100 img-fluid" style="max-height: 500px; object-fit: fill" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 ></h5>
                            <p style="color:black">Learning Management System</p>
                            <p style="color:black"> is a software application or platform that helps organizations, educational institutions, and businesses manage, deliver, and track educational or training programs.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/photo/screenshot (46).png" class="d-block w-100 img-fluid" style="max-height: 500px; object-fit: fill" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Third slide label</h5>
                            <p>Some representative placeholder content for the third slide.</p>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Centered cards container -->
    <div class="d-flex justify-content-center">
        <!-- Student Card -->
        <div class="col-xxl-4 col-xl-6 mb-4 mx-2">
            <div class="card info-card bg-custom-primary text-white">
                <div class="d-flex justify-content-between align-items-start p-3">
                    <h5 class="card-title text-white"></h5>
                    <div class="filter position-relative">
                        <a class="icon text-white" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>Filter</h6>
                            </li>
                            <li>
                                <a asp-controller="Student" asp-action="Register" class="dropdown-item">
                                    Register
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Student" asp-action="LogIn" class="dropdown-item">
                                    LogIn
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center bg-light text-primary">
                          <i class="bi bi-people"></i> 
                        </div>
                        <div class="ps-3">
                            <h3>Student</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Instructor Card -->
        <div class="col-xxl-4 col-xl-6 mb-4 mx-2">
            <div class="card info-card bg-custom-secondary text-white">
                <div class="d-flex justify-content-between align-items-start p-3">
                    <h5 class="card-title text-white"></h5>
                    <div class="filter position-relative">
                        <a class="icon text-white" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>Filter</h6>
                            </li>
                            <li>
                                <a asp-controller="Instructors" asp-action="Register" class="dropdown-item">
                                    Register
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Instructors" asp-action="LogIn" class="dropdown-item">
                                    LogIn
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center bg-light text-primary">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="ps-3">
                            <h3>Instructor</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 