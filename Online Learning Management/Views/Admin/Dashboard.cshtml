    <!-- Chart for Course Enrollments with bigger size and course names as labels -->
    <div class="row justify-content-center ">
        <div class="col-xxl-12 col-md-12 mb-3">
            <div class="card text-dark shadow-lg " style="height:500px; padding:10px">
                <canvas id="courseChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('courseChart').getContext('2d');
        var courseChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.CourseTitles)), // Course titles
                datasets: [{
                    label: 'Enrollment Count',
                    data: @Html.Raw(Json.Serialize(ViewBag.EnrollmentCounts)), // Enrollment counts
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    x: {
                        barPercentage: 0.7,
                        categoryPercentage: 1.0,
                        ticks: {
                            autoSkip: false, // Ensure no labels are skipped
                            maxRotation: 45, // Rotate labels by 45 degrees
                            minRotation: 45
                        }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                responsive: true,
                maintainAspectRatio: false
            }
        });
    });
</script>
