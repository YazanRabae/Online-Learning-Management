@{
    ViewData["Title"] = "Courses";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/assets/js/GetCourses.js"></script>
<script src="~/lib/assets/js/GetInstructorsDrop.js"></script>

<div class="container">
    <h1 class="text-left">@ViewData["Title"]</h1>

    <div class="col">
        <div class="card p-4">
            <h4>Search by</h4>
            <form action="#" method="post" class="php-email-form">
                <div class="row gy-4">
                    <div class="col-md-3">
                        <input type="text" name="courseName" class="form-control" placeholder="Course Name" required>
                    </div>
                    <div class="col-md-3">
                        <div class="col-sm-10">
                            <select class="form-select" name="instructorId" aria-label="Instructor Name">
                                <option selected>Select Instructor</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <section class="section">
        <div class="d-flex justify-content-center">
            <div class="col-lg-12">
                <div class="card p-4">
                    <div class="card-body" id="table">
                        <!-- Table with striped rows -->
                         <table class="table table-striped"> 
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Instructor</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Max Students</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Course Time (hrs)</th>
                                </tr>
                            </thead>
                            <tbody id="courseTableBody">
                                <!-- Rows will be populated by jQuery -->
                            </tbody>
                        </table>
                        <!-- End Table with striped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        console.log("ready!");
        GetCourses.OnStart();
    });

    $(document).ready(function () {
        GetInstructorsDrop.OnStart();
    });;

</script>