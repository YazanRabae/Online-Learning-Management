@{
    ViewData["Title"] = "Student";
}
<div class="container">

    <h1 class="text-left">@ViewData["Title"]</h1>

    <div class="col">
        <div class="card p-4">
            <h4>Search by</h4>
            <form action="#" method="post" class="php-email-form">
                <div class="row gy-4">

                    <div class="col-md-3">
                        <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                    </div>

                    <div class="col-md-3">
                        <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                    </div>

                    <div class="col-md-3 text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <section class="section">
        <div class="d-flex justify-content-center">
            <div class="col-lg-12">

                <div class="card p-4">
                    <div class="card-body">
                        <!-- Table with striped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">IsActive (Yes/No)</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Brandon Jacob</td>
                                    <td>Designer</td>
                                    <td>28</td>
                                    <td><button type="submit" value="Active" class="btn btn-primary">Active</button></td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Bridie Kessler</td>
                                    <td>Developer</td>
                                    <td>35</td>
                                    <td><button type="submit" value="Active" class="btn btn-primary">Active</button></td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Ashleigh Langosh</td>
                                    <td>Finance</td>
                                    <td>45</td>
                                    <td><button type="submit" value="Active" class="btn btn-primary">Active</button></td>
                                </tr>
                                <tr>
                                    <th scope="row">4</th>
                                    <td>Angus Grady</td>
                                    <td>HR</td>
                                    <td>34</td>
                                    <td><button type="submit" value="Active" class="btn btn-primary">Active</button></td>
                                </tr>
                                <tr>
                                    <th scope="row">5</th>
